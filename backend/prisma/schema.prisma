generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String

  // New personalization fields
  skillLevel            String?   // Beginner, Intermediate, Advanced
  preferred_domain      String?   // Web Development, Mobile App, Backend/API, Machine Learning, Full Stack
  preferred_tech_stack  String[]  // Array: React, Vue, Python, Django, etc.
  preferred_goal        String?   // Learning, Resume Builder, College Project, Portfolio
  onboarding_completed  Boolean   @default(false)

  projects     Project[]
  stepProgress StepProgress[]

  createdAt DateTime @default(now())
}




model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  difficulty    String
  concepts      String[]
  estimatedTime String

  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])

  steps         ProjectStep[]

  createdAt     DateTime @default(now())
}



model ProjectStep {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  why         String
  order       Int

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  progress    StepProgress[]

  createdAt   DateTime @default(now())
}





model StepProgress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  completed Boolean  @default(false)

  stepId    String   @db.ObjectId
  step      ProjectStep @relation(fields: [stepId], references: [id])

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  updatedAt DateTime @updatedAt
}
